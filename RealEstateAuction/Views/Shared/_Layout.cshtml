<body>
    <!-- Display message here -->
    <div id="snackbar"></div>

    <script>
        // Check if TempData contains a message
        var message = '@TempData["Message"]';

        if (message) {
            var x = document.getElementById("snackbar");
            x.textContent = message;
            x.className = "show";
            setTimeout(function () {
                x.className = x.className.replace("show", "");
            }, 3000);
        }
    </script>

