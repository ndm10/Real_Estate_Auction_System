                                    <input type="email" placeholder="Enter email address"
                                           class="form-control space-top email-login" name="email" required>
                                    <input type="password" placeholder="Enter password" class="form-control space-top email-login"
                                           name="pwd" required>
                                    <input type="tel" placeholder="Enter phone number" class="form-control space-top email-login"
