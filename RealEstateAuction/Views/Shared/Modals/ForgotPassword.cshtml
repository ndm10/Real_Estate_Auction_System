<!--Forgot password modal-->

<!-- Modal -->
<div class="modal fade" id="forgotModal" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Forgot Password</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-2">
                    <h1>Enter you Email!</h1>
                    <span>Find back your account to make bidding fast & easy.</span>
                </div>
                <form action="forgot-password" method="post" class="text-center">
                    <input type="email" placeholder="Enter email address"
                           class="form-control" name="email" required>
                    <button class="btn btn-primary mt-2">
                        Continue
                    </button>
                </form>
                <div class="social-separator">
                    <div class="social-line"></div>
                    <span>OR</span>
                    <div class="social-line"></div>
                </div>
                <div class="clearfix space-bottom text-center space-top-30">
                    <span class="dark-gray-text">Already have an account?</span>
                    <a id="logInForgotBtn" class="create-acct-link">Log in</a>
                </div>
                <div class="clearfix space-bottom text-center" style="font-size: 12px;">
                    <span class="dark-gray-text">
                        By signing up with Google, you agree to Invaluable's <a href="#" target="_blank">terms of service</a> and <a href="/agreements/privacy.cfm" target="_blank">privacy policy</a>.
                        Invaluable may send you communications; you can set your preferences in your
                        account.
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>